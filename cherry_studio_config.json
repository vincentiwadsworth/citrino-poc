{
  "name": "Citrino Real Estate API",
  "description": "API para consultar y recomendar propiedades inmobiliarias en Santa Cruz",
  "version": "1.0.0",
  "base_url": "http://localhost:5000",
  "endpoints": {
    "health": {
      "method": "GET",
      "url": "/api/health",
      "description": "Verificar estado del API"
    },
    "search": {
      "method": "POST",
      "url": "/api/buscar",
      "description": "Buscar propiedades por filtros",
      "parameters": {
        "zona": "string - Ej: 'Equipetrol', 'Las Palmas'",
        "precio_min": "number - Precio mínimo",
        "precio_max": "number - Precio máximo",
        "superficie_min": "number - Superficie mínima en m²",
        "superficie_max": "number - Superficie máxima en m²",
        "habitaciones_min": "number - Mínimo de habitaciones",
        "banos_min": "number - Mínimo de baños",
        "tiene_garaje": "boolean - Si requiere garaje",
        "limite": "number - Límite de resultados (default: 20)"
      }
    },
    "recommend": {
      "method": "POST",
      "url": "/api/recomendar",
      "description": "Generar recomendaciones personalizadas",
      "parameters": {
        "presupuesto_min": "number - Presupuesto mínimo",
        "presupuesto_max": "number - Presupuesto máximo",
        "adultos": "number - Cantidad de adultos",
        "ninos": "array - Edades de niños",
        "adultos_mayores": "number - Adultos mayores",
        "zona_preferida": "string - Zona preferida",
        "tipo_propiedad": "string - Tipo preferido",
        "necesidades": "array - Lista de necesidades",
        "limite": "number - Límite de resultados (default: 10)",
        "umbral_minimo": "number - Umbral mínimo de compatibilidad (default: 0.3)"
      }
    },
    "statistics": {
      "method": "GET",
      "url": "/api/estadisticas",
      "description": "Obtener estadísticas generales"
    },
    "zones": {
      "method": "GET",
      "url": "/api/zonas",
      "description": "Obtener lista de zonas disponibles"
    }
  },
  "examples": {
    "search_example": {
      "url": "/api/buscar",
      "method": "POST",
      "body": {
        "zona": "Equipetrol",
        "precio_min": 150000,
        "precio_max": 300000,
        "habitaciones_min": 2,
        "banos_min": 2,
        "tiene_garaje": true,
        "limite": 10
      }
    },
    "recommend_example": {
      "url": "/api/recomendar",
      "method": "POST",
      "body": {
        "presupuesto_min": 200000,
        "presupuesto_max": 350000,
        "adultos": 2,
        "ninos": [8, 12],
        "zona_preferida": "Las Palmas",
        "tipo_propiedad": "casa",
        "necesidades": ["seguridad", "areas_comunes", "estacionamiento"],
        "limite": 5
      }
    }
  }
}